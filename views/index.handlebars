<div class="container">
    <div >
        <h1 class="display-3">Eat-da-Burger</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <ul>
                {{#each burgers}}
                {{#unless eaten}}
                <li data-id="{{id}}">
                    {{burger_name}}
                    <form action="api/burgers/{{id}}?_method=PUT" method="POST">
                        <button type="submit">Eat</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-3">
            <img src="https://www.landolakes.com/RecipeManagementSystem/media/Recipe-Media-Files/Recipes/Retail/x17/2019_DF_Retail_Butter-Burger_20912_600x600.jpg?ext=.jpg" />
        </div>
        <div class="col-md-3">
            <ul>
                {{#each burgers}}
                {{#if eaten}}
                <li data-id="{{id}}">
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <div id="fill-your-plate">
                <form action="api/burgers" method="POST" class="create-form">
                    <div class="form-group">
                        <input type="text" id="new-burger" name="name">
                    </div>
                    <button type="submit">Add New Burger</button>
                </form>
            </div>
        </div>
    </div>
</div>